generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Draft {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title     String?
    content   String?
    imageKey  String?
    imageUrl  String?
    authorId  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Post {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    slug        String
    content     String
    imageKey    String
    imageUrl    String
    authorId    String
    publishedAt DateTime @default(now())
}
